# ========================================
# REQUIRED ENVIRONMENT VARIABLES
# ========================================

# Database Configuration
# For Render: Use the DATABASE_URL from your PostgreSQL instance
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Secret Key (REQUIRED - generate a strong random string)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here

# Server Port
PORT=5000

# Cloudinary Configuration (REQUIRED for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# OCR API Key (REQUIRED for document verification)
OCR_API_KEY=your_ocr_api_key

# ========================================
# OPTIONAL ENVIRONMENT VARIABLES
# ========================================

# Node Environment
NODE_ENV=production

# Frontend URL (for CORS)
# For production, set this to your Vercel frontend URL
FRONTEND_URL=https://your-app-name.vercel.app

# Blockchain Configuration (Optional - for future use)
BLOCKCHAIN_NETWORK=sepolia
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
CONTRACT_ADDRESS=0x...
PRIVATE_KEY=your_private_key_here

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
